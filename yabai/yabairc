yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               on
yabai -m config window_opacity               on
yabai -m config window_shadow                off
yabai -m config normal_window_opacity        0.9
yabai -m config window_border                on
yabai -m config window_border_width          5
yabai -m config active_window_border_color   0xff775759
yabai -m config normal_window_border_color   0xff505050
yabai -m config insert_window_border_color   0xffd75f5f
yabai -m config active_window_border_color   0xff775759
yabai -m config normal_window_border_color   0xff555555
yabai -m config insert_feedback_color        0xffd75f5f
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.50
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 on
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  7
yabai -m config bottom_padding               5
yabai -m config left_padding                 5
yabai -m config right_padding                5
yabai -m config window_gap                   5

# automation rules
yabai -m rule --add app="^System Preferences$" manage=off
# yabai -m rule --add app="^Zoom$" manage=off
# yabai -m rule --add app="^zoom.us$" manage=off
yabai -m rule --add app="^Dash$" manage=off
yabai -m rule --add app="^Cleanshot X$" manage=off
yabai -m rule --add app="^iStat Menus Status$" manage=off mouse_follows_focus=off
yabai -m rule --add app="^NotePlan 3$" title="^$" manage=off grid=3:7:3:1:2:1
yabai -m rule --add app="^NotePlan 3$" title="^Command Bar$" manage=off grid=3:7:3:1:2:1
yabai -m rule --add app="^NotePlan 3$" title="^Preferences$" manage=off 
yabai -m rule --add app="^Poolside FM$" manage=off
yabai -m rule --add app="^Kube Forwarder$" manage=off

echo "yabai configuration loaded.."
